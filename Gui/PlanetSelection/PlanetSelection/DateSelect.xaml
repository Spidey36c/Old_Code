<Window x:Class="PlanetSelection.DateSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanetSelection"
        mc:Ignorable="d"
        Title="DateSelect" Height="202.5" Width="430.625" ResizeMode="NoResize">
    <Grid Height="170" Margin="0,0,2,0" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment">
        <DatePicker Margin="10,40,10,0" VerticalAlignment="Top"/>
        <DatePicker Margin="10,0,10,46" VerticalAlignment="Bottom"/>
        <Label x:Name="label" Content="Departure" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Arrival" HorizontalAlignment="Left" Margin="10,69,0,75" d:LayoutOverrides="Height"/>
        <Button x:Name="button" Content="Confirm" HorizontalAlignment="Right" Height="31" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="109" Click="button_Click"/>
    </Grid>
</Window>
